@{
    ViewData["Title"] = "Profile";
    var product = ViewBag.product;
}

<h2>Your Profile</h2>
<div class="row">
    <div class="col-md-4">
        <img src="@product.Img" alt="" style="width:100%" />
    </div>
    <div class="col-md-8">
        <h2>Sản phẩm: @product.Title</h2>
        <h3><span class="text-decoration-line-through">Giá gốc: @product.Cost</span> Giá mới: @product.Sale</h3>
        <h3>Mô tả: </h3>
        <p>
            @product.Description
        </p>
        <h3>
            Trạng thái:
            @if (product.status == true)
            {
                <span>Còn hàng</span>
            }
            else
            {
                <span>Hết hàng</span>
            }
        </h3>
        <h3>Ngày đăng: @product.date.ToString("dd-MM-yyyy")</h3>
        <p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-danger btn-sm">Back to list</a>
        </p>

    </div>
</div>