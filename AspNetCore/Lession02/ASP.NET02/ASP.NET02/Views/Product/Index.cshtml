@{
    ViewData["Title"] = "Index";
    var products = ViewBag.products;
}

<div class="row">
    <div class="col-md-3">
        <h2>Danh Mục</h2>
        <table class="table table-bordered">
            <tr>
                <td><a class="dropdown-item" asp-route="category" asp-route-id="1">Quần áo</a></td>
            </tr>
            <tr>
                <td><a class="dropdown-item" asp-route="category" asp-route-id="3">Đồng hồ</a></td>
            </tr>
            <tr>
                <td><a class="dropdown-item" asp-route="category" asp-route-id="2">Túi xách</a></td>
            </tr>
        </table>
    </div>
    <div class="col-md-9">
        <div class="row">
            @foreach (var item in products)
            {
                <div class="col-md-4">
                    <div class="thumbnail text-center">
                        <img src="@item.Img" class="w-100" style="height:200px" />
                        <div class="caption">
                            <h3>@item.Title</h3>
                            <p><span class="text-decoration-line-through">@item.Cost </span>@item.Sale</p>
                            <p>
                                <a asp-route="details" asp-route-id="@item.Id" class="btn btn-success btn-block">Chi tiết</a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
