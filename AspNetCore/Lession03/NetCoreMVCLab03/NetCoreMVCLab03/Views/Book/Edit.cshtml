@model NetCoreMVCLab03.Models.Book

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Book</h4>
<hr />
<form action="" method="POST" role="form">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Tên sách</label>
        <input asp-for="Title" class="form-control" type="text" placeholder="Tên sách" />
    </div>
    <div class="form-group">
        <label asp-for="AuthorId" class="control-label">Tác giả</label>
        <select asp-for="AuthorId" class="form-control" asp-items="@ViewBag.authors">
            <option value="">Chọn tác giả</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="GenreId" class="control-label">Thể loại</label>
        <select asp-for="GenreId" class="form-control" asp-items="@ViewBag.genres">
            <option value="">Chọn thể loại</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Giá sách</label>
        <input asp-for="Price" class="form-control" type="text" placeholder="Giá sách" />
    </div>
    <div class="form-group">
        <label asp-for="TotalPage" class="control-label">Tổng số trang</label>
        <input asp-for="TotalPage" class="form-control" type="text" placeholder="Tổng số trang" />
    </div>
    <div class="form-group">
        <label asp-for="Image" class="control-label">Hình ảnh/ Poster</label>
        <input asp-for="Image" class="form-control" type="file" />
    </div>
    <div class="form-group">
        <label asp-for="Sumary" class="control-label">Giới thiệu ngắn</label>
        <textarea asp-for="Sumary" class="form-control" placeholder="Nội dung sách ...."> </textarea>
    </div>
    <button class="btn btn-primary" type="submit">Lưu lại</button>
</form>
