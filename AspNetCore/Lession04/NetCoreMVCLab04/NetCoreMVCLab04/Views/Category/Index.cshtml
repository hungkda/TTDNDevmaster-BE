@model IEnumerable<NetCoreMVCLab04.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách danh mục</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <div>@item.CreateDate.ToShortDateString()<div />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateBy)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Status)
                    @if (item.Status == true)
                    {
                        <span>Active</span>
                    }
                    else
                    {
                        <span>No Avtive</span>
                    }
            </td>
            <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id /* id=item.PrimaryKey */ }, new{@class="btn btn-primary"})
                    @Html.ActionLink("Details", "Details", new {id = item.Id /* id=item.PrimaryKey */ }, new{@class="btn btn-success"})
                    @Html.ActionLink("Delete", "Delete", new {id = item.Id /* id=item.PrimaryKey */ }, new{@class="btn btn-danger"})
            </td>
        </tr>
}
    </tbody>
</table>
